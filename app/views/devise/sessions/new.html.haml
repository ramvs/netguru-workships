%body
  .container
    .row
      .col-md-6.col-center
        .well
          %h1{:style => "text-align: center; color: #3498db;"}
            %b
              Sign in
          = bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name),layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10 form-group-lg") do |f|
            = f.text_field :email, required: true
            = f.password_field :password, required: true
            = f.check_box :remember_me, as: :boolean if devise_mapping.rememberable?
            %br
              = f.submit "Sign In", class: 'btn btn-primary'
